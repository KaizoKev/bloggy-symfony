{% extends 'base.html.twig' %}

{% block title %}Bloggy - {{ article.titre}}
{% endblock %}

{% block body %}
	<div class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ article.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ article.titre }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ article.description }}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ article.contenu }}</td>
				</tr>
				<tr>
					<th>Created_at</th>
					<td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Updated_at</th>
					<td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_articles_index') }}">back to list</a>

		<a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>

		{{ include('articles/_delete_form.html.twig') }}

	</div>
{% endblock %}
